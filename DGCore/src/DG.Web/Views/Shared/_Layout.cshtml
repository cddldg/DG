<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title - dldg.ink</title>
    <!--css-->
    <link href="~/plugin/layui/css/layui.css" rel="stylesheet" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <!--js-->
    <script src="~/plugin/layui/layui.js"></script>
    <script src="~/plugin/layui/mymodules/token.js"></script>
    <environment exclude="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Staging,Production">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</head>
<body class="layui-layout-body">

        @RenderBody()

    <script>
        //config的设置是全局的token
        layui.config({
            base: '/plugin/layui/mymodules/' //假设这是token.js所在的目录
        }).extend({ //设定模块别名
            token: 'token' //如果token.js是在根目录，也可以不用设定别名
            });
        
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>